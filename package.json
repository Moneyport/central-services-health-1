{
  "name": "@mojaloop/central-services-health",
  "version": "7.0.0",
  "description": "Shared code for generic health check servers",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "npm run test:unit | faucet",
    "pretest": "npm run build",
    "standard": "standard",
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "ts-node node_modules/tape/bin/tape 'test/unit/**/*.test.ts'",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc --reporter=lcov --require ts-node/register tape test/unit/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "git:stagelib": "git add lib/*ts; git add lib/*.map; git add lib/*.js",
    "git:standardFix": "standard --fix"
  },
  "pre-commit": [
    "build",
    "test:unit",
    "git:stagelib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-services-metrics.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services"
  ],
  "author": "lewisdaly",
  "contributors": [
    "Lewis Daly <lewis@vesselstech.com"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/central-services-health/issues"
  },
  "homepage": "https://github.com/mojaloop/central-services-health#readme",
  "dependencies": {
    "@hapi/boom": "7.4.2",
    "@hapi/hapi": "18.3.1",
    "@mojaloop/central-services-error-handling": "5.2.0",
    "@mojaloop/central-services-shared": "6.4.1"
  },
  "devDependencies": {
    "@types/hapi__hapi": "18.2.5",
    "@types/node": "11.9.4",
    "@types/sinon": "7.0.13",
    "@types/tape": "4.2.33",
    "debug": "4.1.1",
    "faucet": "0.0.1",
    "nyc": "13.3.0",
    "pre-commit": "1.2.2",
    "sinon": "7.3.2",
    "standard": "12.0.1",
    "tap-spec": "5.0.0",
    "tap-xunit": "2.3.0",
    "tape": "4.10.1",
    "tapes": "4.1.0",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "typedoc": "0.14.2",
    "typescript": "3.3.3333"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  }
}
